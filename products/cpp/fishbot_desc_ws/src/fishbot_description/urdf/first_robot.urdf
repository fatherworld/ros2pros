<?xml version="1.0"?>
<robot name="first_robot">
<!--机器人的身体部分-->
<link name="base_link">
    <!--机器人的身体部分-->
    <visual>
        <!--沿自己几何中心的偏移和旋转量-->
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <!--机器人身体的几何形状-->
        <geometry>
            <!--圆柱体-->
            <cylinder length="0.1" radius="0.2"/>
            <!--<box size="0.5 0.3 0.1"/>-->

        </geometry>
        <!--机器人的材质-->
        <material name="white">
            <color rgba="1.0 1.0 1.0 0.5"/>
        </material>
    </visual>
    
</link>

<!--机器人IMU部件-->
<link name="imu_link">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.02 0.02 0.02"/>
            </geometry>
    </visual>
    <material name="black">
            <color rgba="0 0 0 0.5"/>
        </material>
</link>   

    <!--机器人关节-->
    <joint name="imu_joint" type="fixed">
        <parent link="base_link"/>
        <child link="imu_link"/>
        <!--子部件相对于父部件的平移和旋转-->
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </joint>

</robot>