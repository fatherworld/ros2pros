<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<!--声明驱动轮模块-->
<xacro:macro name="wheel_xacro" params="wheel_name xyz">
    <gazebo reference="${wheel_name}_wheel_link">
        <material>Gazebo/Yellow</material>
    </gazebo>

    <gazebo reference="${wheel_name}_wheel_link">
        <material>Gazebo/Yellow</material>
    </gazebo>

    <link name="${wheel_name}_wheel_link">
    <!--驱动轮子的身体部分-->
    <visual>
        <!--沿自己几何中心的偏移和旋转量-->
        <origin xyz="0 0 0" rpy="1.57079 0 0"/> <!--轮子默认是躺平状态，调整轮子部件中的rpy的值，将r调整成90度 -->
        <!--驱动轮子身体的几何形状-->
        <geometry>
            <!--长方体-->
             <cylinder length="0.04" radius="0.032"/>
        </geometry>
        <!--机器人的材质-->
        <material name="yellow">
            <color rgba="1.0 1.0 0.0 0.8"/>
        </material>
    </visual>
    <collision> 
        <origin xyz="0 0 0" rpy="1.57079 0 0"/>
        <geometry>
            <cylinder length="0.04" radius="0.032"/>
        </geometry>
        <material name="yellow">
            <color rgba="1.0 1.0 0.0 0.8"/>
        </material>
    </collision>
    <xacro:cylinder_inertia m="0.1" r="0.032" h="0.04" />
</link>

<!--驱动轮关节-->
    <joint name="${wheel_name}_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="${wheel_name}_wheel_link"/>
        <!--子部件相对于父部件的平移和旋转-->
        <origin xyz="${xyz}"/>
        <axis xyz="0 1 0" /> <!--表示的是 绕y轴方向旋转-->
    </joint>

</xacro:macro>
</robot>